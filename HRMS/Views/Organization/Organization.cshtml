@model Data.HRMS.LookOrganization

@{
    ViewBag.Title = "Organization";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    string alert = ViewBag.Alert;
}

<div class="content-wrapper">
    <h3>
        Organization
    </h3>
    <div class="row">
        <div class="col-sm-6 col-lg-offset-3">
            <!-- START panel-->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @if (Model.IsNotNull())
                    {
                        <p> Edit</p>
                    }
                    else
                    {
                        <p> Add</p>
                    }

                    Department info
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Organization", "Organization", FormMethod.Post@*, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "frmInsert" }*@))
                    {
                        if (alert.IsNotNullOrEmpty())
                        {
                            <p>@alert</p>
                        }
                        <div class="form-group">
                            <label>Organization Name</label>
                            @* <input type="email" placeholder="Department Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.OrganizationName, new { @class = "form-control", placeholder = "Organization Name" })
                        </div>
                        <div class="form-group">
                            <label>Organization URL</label>
                            @* <input type="email" placeholder="Department Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.OrganizationURL, new { @class = "form-control", placeholder = "Organization URL" })
                        </div>
                        <div class="col-sm-12 text-center">
                            @Html.HiddenFor(m => m.LookOrganizationId)
                            <input type="submit" class="btn btn-sm btn-primary" value="Save" />
                        </div>
                    }
                </div>
            </div>
            <!-- END panel-->
        </div>

    </div>
</div>