@model Data.HRMS.User
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<div class="content-wrapper">
    <h3>
        Edit User
    </h3>
    <div class="row">
        <div class="col-sm-6 col-lg-offset-3">
            <!-- START panel-->
            <div class="panel panel-default">
                <div class="panel-heading"> User info</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { role = "form", id = "frmInsert" }))
                    {

                        <div class="form-group" style="pointer-events:none">
                            <label>Designation Name<span class='required'>*</span></label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "User Name" })
                            @Html.HiddenFor(m => m.UserId)
                        </div>
                        <div class="form-group">
                            <label>Role Name<span class='required'>*</span></label>
                            @Html.DropDownListFor(m => m.RoleId, ViewBag.Roles as SelectList, new { @class = "form-control", placeholder = "Role" })
                        </div>
                       
                        <div class="col-sm-12 text-center">
                            <input type="submit" class="btn btn-sm btn-primary" value="Save" />
                        </div>
                    }

                </div>
            </div>
            <!-- END panel-->
        </div>

    </div>
</div>
<script>
    // just for the demos, avoids form submit
    jQuery.validator.setDefaults({
        submitHandler: function (form) {
            form.submit();
        }
        //debug: true,
        //success: "valid"
    });
    $("#frmInsert").validate({
        rules: {
            Email: {
                required: true
            },
            RoleId: {
        required: true
    }
        },
        submitHandler: function (form) {
            form.submit();
        }
    });
</script>