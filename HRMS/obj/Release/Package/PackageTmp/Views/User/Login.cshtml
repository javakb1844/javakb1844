@model VM.User.SignInViewModel
@{
    Layout = null;
    string alert = ViewBag.Alert;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Login to HRMS</title>
    <!-- =============== VENDOR STYLES ===============-->
    <!-- FONT AWESOME-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/font-awesome.min.css">
    <!-- SIMPLE LINE ICONS-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/simple-line-icons.css">
    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/bootstrap.css" id="bscss">
    <!-- =============== APP STYLES ===============-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/app.css" id="maincss">
</head>
<body>
    @if (alert.IsNotNullOrEmpty())
    {
        <script>
            alert("@ViewBag.Alert");
        </script>
    }
    <div class="wrapper">
        <div class="block-center mt-xl wd-xl">
            <!-- START panel-->
            <div class="panel panel-dark panel-flat">
                <div class="panel-heading text-center">
                    @*<a href="#">
                            <img src="img/logo.png" alt="Image" class="block-center img-rsssounded">
                        </a>*@
                    <h5>Login Panel</h5>
                </div>
                <div class="panel-body">
                    <p class="text-center pv">SIGN IN TO CONTINUE.</p>
                    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class ="mb-lg", enctype = "multipart/form-data", id = "frmInsert" }))
                    {
                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control", placeholder = "Enter email", required = "required" })
                                <span class="fa fa-envelope form-control-feedback text-muted"></span>
                            </div>
                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control", placeholder = "Enter password", required = "required" })
                                <span class="fa fa-lock form-control-feedback text-muted"></span>
                            </div>
                            <div class="clearfix">
                                <div class="checkbox c-checkbox pull-left mt0">
                                    <label>
                                        <input type="checkbox" value="" name="remember">
                                        <span class="fa fa-check"></span>Remember Me
                                    </label>
                                </div>
                                @*<div class="pull-right">
                                        <a href="recover.html" class="text-muted">Forgot your password?</a>
                                    </div>*@
                            </div>
                            <button type="submit" class="btn btn-block btn-primary mt-lg">Login</button>
                    }
                    @* <p class="pt-lg text-center">Need to Signup?</p><a href="register.html" class="btn btn-block btn-default">Register Now</a>*@
                </div>
            </div>
            <!-- END panel-->
            @*<div class="p-lg text-center">
                    <span>&copy;</span>
                    <span>2015</span>
                    <span>-</span>
                    <span>Angle</span>
                    <br>
                    <span>Bootstrap Admin Template</span>
                </div>*@
        </div>
    </div>
    <!-- =============== VENDOR SCRIPTS ===============-->
    <!-- MODERNIZR-->
    @*   <script src="../vendor/modernizr/modernizr.js"></script>*@
    <!-- JQUERY-->
    <script src="~/static/admin/theme1/js/jquery.js"></script>
    <!-- BOOTSTRAP-->
    <script src="~/static/admin/theme1/js/bootstrap.js"></script>
    <!-- STORAGE API-->
    <script src="~/static/admin/theme1/js/jquery.storageapi.js"></script>
    <!-- PARSLEY-->
    <script src="~/static/admin/theme1/js/parsley.min.js"></script>
    <!-- =============== APP SCRIPTS ===============-->
    <script src="~/static/admin/theme1/js/app.js"></script>
</body>
</html>