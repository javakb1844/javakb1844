@if (Session["EmployeeId"].IsNull())
{
    <script>
        window.location.href = "@Url.Action("Login", "User")";
    </script>

    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">

    <link rel="icon" href="~/static/front/theme1/images/16X16.ico" type="image/x-icon">
    <!-- JQUERY-->
    <script src="~/static/admin/theme1/js/jquery.js"></script>

    <!-- FONT AWESOME-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/font-awesome.min.css">

    <!-- =============== Custom STYLES ===============-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/custom.css">

    <!-- SIMPLE LINE ICONS-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/simple-line-icons.css">

    <!-- ANIMATE.CSS-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/animate.min.css">

    <!-- ============== Toastr ====================== -->
    <link rel="stylesheet" href="~/static/admin/theme1/css/toastr.css">

    <!-- ============== Sweet Alert ====================== -->
    <link rel="stylesheet" href="~/static/admin/theme1/css/sweetalert.css">


    <!-- WHIRL (spinners)-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/whirl.css">

    <!-- ============== Datatables ====================== -->
    <link rel="stylesheet" href="~/static/admin/theme1/css/dataTables.colVis.css">
    <link rel="stylesheet" href="~/static/admin/theme1/css/dataTables.bootstrap.css">

    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/bootstrap.css" id="bscss">






    <!-- =============== APP STYLES ===============-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/app.css" id="maincss">

    <!-- DATETIMEPICKER-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/bootstrap-datetimepicker.min.css">

    <!-- DATETIMEPICKER-->
    <link rel="stylesheet" href="~/static/admin/theme1/css/bootstrap-fileupload.css">

    <!-- validation https://jqueryvalidation.org/category/methods/ -->
    @*<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>*@
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="~/static/admin/theme1/js/jquery.maskedinput.js" type="text/javascript"></script>

    <!-- / validation -->
</head>
<body>
    <div class="wrapper">
        @*@Html.Partial("_HeaderBarPartial")*@
        @Html.Action("_HeaderBarPartial", "Menu")
        @*@Html.Partial("_LeftSiderBarPartial")*@
        @Html.Action("_LeftSiderBarPartial", "Menu")
        @Html.Partial("_RightSideBarPartial")
        <section>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>
        <script>
            $(document).ready(function () {
                $(document).off("change", "#compnayid").on("change", "#compnayid", function (event) {
                    var selectedid = $(this).val();
                    debugger;
                    var Callurl = "/Home/SelectCompany?id=" + selectedid;
                    var service = new Service();
                    var result = service.post(Callurl, null, false, function (res) {
                        console.log(res);
                        if (res.ResultType == 1)
                            location.reload();
                        else
                            return false;
                    });
                });
            });
        </script>
        @Html.Partial("_FooterPartial")
    </div>
</body>
</html>
