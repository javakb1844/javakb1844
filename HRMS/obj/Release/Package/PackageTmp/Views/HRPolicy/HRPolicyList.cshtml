}
<div class="content-wrapper">
    <h3>
        HRPolicy
        <a href="@Url.Action("Create","HRPolicy")">
            <button type="button" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Add New HRPolicy</button>
        </a>
    </h3>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    HRPolicyInfo
