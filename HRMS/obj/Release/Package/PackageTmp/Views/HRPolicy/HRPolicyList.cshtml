                                <th>Policy Title</th>
                                <th>Policy Value</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                var count = 0;
                                foreach (var item in Model.HRPolicyList)
                                {
                                    var policy = Model.LookPolicyList.Where(x => x.LookPolicyId == item.LookPolicyId).FirstOrDefault();
                                    count = count + 1;

                                    <tr class="gradeX">
                                        <td>@count</td>
                                        <td>@Model.LookDesignationList.Where(x => x.LookDesignationId == item.LookDesignationId).FirstOrDefault().DesignationName</td>
                                        <td>@policy.PolicyName</td>
                                        <td>@item.PolicyValue @policy.PolicyUnit </td>
                                        <td class="table_action">
                                            <a href="@Url.Action("Create","HRPolicy",new {id=item.HRPolicyId })" title="Edit Department"><em class="icon-note" style="font-size: 18px;"></em></a>
                                            <em class="delete_record icon-close" title="Delete HRPolicy" style="font-size:18px;color:red" rel="51"></em>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
