@model List<Data.HRMS.Permission>
@using VM.HRMS;
@{
    ViewBag.Title = "PermissionList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="content-wrapper">
    <h3>
        Permission
        <a href="@Url.Action("Create","Permission")">
            <button type="button" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Add New Permission</button>
        </a>
    </h3>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    PermissionInfo
                </div>
                <div class="panel-body">
                    <table id="datatable1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>S.NO.</th>
                                <th>Menu</th>
                                <th>Display Name</th>
                                <th>Atribute</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                List<LeftMenuViewModel> tempMenu = ViewBag.menuList.Data;
                                var count = 0;
                                foreach (var item in Model)
                                {
                                    string MenauName = "";
                                    if (tempMenu.CountedPositive())
                                    {
                                        var tempMenuName = tempMenu.Where(x => x.LeftMenuId == item.MenuId).FirstOrDefault();
                                        if (tempMenuName.IsNotNull())
                                        {
                                            MenauName = tempMenuName.MenuName;
                                        }
                                    }
                                    count = count + 1;
                                    <tr class="gradeX">
                                        <td>@count</td>
                                        <td>@MenauName</td>
                                        <td>@item.Name</td>
                                        <td>@item.Attribute</td>
                                        <td>@item.IsActive</td>
                                        <td class="table_action">
                                            <a href="@Url.Action("Create","Permission",new {id=item.PermissionId })" title="Edit Department"><em class="icon-note" style="font-size: 18px;"></em></a>
                                            <em class="delete_record icon-close" title="Delete Department" style="font-size:18px;color:red" rel="51"></em>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
