@model Data.HRMS.HRPolicy
@using VM.HRMS;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="content-wrapper">
    <h3>
        Add HR Policy
    </h3>
    <div class="row">
       
            <!-- START panel-->
            <div class="panel panel-default">
                <div class="panel-heading"> Designation info</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Create", "HRPolicy", FormMethod.Post, new { role = "form", id = "frmInsert" }))
                    {
                        <div class="form-group col-sm-6 col-lg-offset-3" >
                            <label>Job Title<span class='required'>*</span></label>
                            @Html.DropDownListFor(m => m.LookDesignationId, ViewBag.LookDesignationList as SelectList, new { @class = "form-control", placeholder = "Designation" })
                        </div>
                        <div class="form-group col-sm-6 col-lg-offset-3">
                            <label>Policy Name<span class='required'>*</span></label>
                            @Html.DropDownListFor(m => m.LookPolicyId, ViewBag.LookPolicyList as SelectList, new { @class = "form-control", placeholder = "Policy" })
                        </div>
                        <div class="form-group col-sm-6 col-lg-offset-3">
                            <label>Policy Value<span class='required'>*</span></label>
                            @Html.TextBoxFor(m => m.PolicyValue, new { @class = "form-control", placeholder = "Policy Value" })
                            @Html.HiddenFor(m => m.HRPolicyId)
                        </div>
                        <div class="col-sm-12 text-center ">
                            <input type="submit" class="btn btn-sm btn-primary" value="Save" style="width: 115px; font-size: 1.9rem;" />
                        </div>
                    }

                    <div class="panel-body" style="margin-top:100px; height:700px"> 
                     
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>S.NO.</th>
                                    <th>Policy Group</th>
                                    <th>PolicyName</th>
                                    <th>Policy Value</th>
                                    <th>Unit</th>
                                    @*<th>Action</th>*@

                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.HrPolicyDetailList != null)
                                {
                                    var count = 0;
                                    List<PolicyGroupDetailListViewModel> tempDetail = ViewBag.HrPolicyDetailList;
                                    foreach (var item in tempDetail)
                                    {
                                        count = count + 1;

                                        <tr class="gradeX">
                                            <td>@count</td>
                                            <td>@item.PolicyGroupName</td>
                                            <td>@item.PolicyName</td>
                                            <td>@item.PolicyValue</td>
                                            <td>@item.PolicyUnit</td>


