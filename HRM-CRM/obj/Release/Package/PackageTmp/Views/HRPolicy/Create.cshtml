                                                <a href="@Url.Action("Create","HRPolicy",new {id=item.LookPolicyGroupId })" title="Edit Department"><em class="icon-note" style="font-size: 18px;"></em></a>
                                                <em class="delete_record icon-close" title="Delete HRPolicy" style="font-size:18px;color:red" rel="51"></em>
                                            </td>*@
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
