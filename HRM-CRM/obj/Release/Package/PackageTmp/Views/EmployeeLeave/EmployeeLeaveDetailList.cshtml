@model List<Data.HRMS.EmployeeLeave>
@{
    ViewBag.Title = "EmployeeLeaveList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="content-wrapper">
    <h3>
        Departments
        <a href="@Url.Action("Create","EmployeeLeave")">
            <button type="button" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Add New EmployeeLeave</button>
        </a>
    </h3>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    EmployeeLeave Info
                </div>
                <div class="panel-body">
                    <table id="datatable1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>S.NO.</th>
                                <th>Leave Type</th>
                                <th>Leave Duration</th>
                                <th>Leave Date</th>
                                <th>Leave Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                string iconColor = "";
                                string submitTitle = "";
                                var count = 0;
                                foreach (var item in Model)
                                {
                                    count = count + 1;
                                    iconColor = "color:green";
                                    submitTitle = "Submit";
                                    if (item.LookLeaveStatusId == 2)
                                    {
                                        submitTitle = "Submited";
                                        iconColor = "";
                                    }
                                    <tr class="gradeX">
                                        <td>@count</td>
                                        <td>@item.PolicyName</td>
                                        <td>@item.LeaveValue</td>
                                        <td>@item.LeaveDate.ToShortDateString()</td>
                                        <td>@item.LookLeaveStatusId</td>
                                        <td class="table_action">
                                            <em class="Submit_record icon-login" title="@submitTitle" style="font-size:18px;@iconColor" rel="51"></em>
                                            @*<a href="@Url.Action("Create","EmployeeLeave",new {id=item.EmployeeLeaveId })" title="Edit Department">
                                                <em class="icon-note" style="font-size: 18px;"></em></a>*@
                                            <em class="delete_record icon-close" title="Delete Department" style="font-size:18px;color:red" rel="51"></em>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
