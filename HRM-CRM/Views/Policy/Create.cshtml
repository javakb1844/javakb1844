@model Data.HRMS.LookPolicy
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="content-wrapper">
    <h3>
        Add Designation
    </h3>
    <div class="row">
        <div class="col-sm-6 col-lg-offset-3">
            <!-- START panel-->
            <div class="panel panel-default">
                <div class="panel-heading"> Policy info</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Create", "Policy", FormMethod.Post, new { role = "form", id = "frmInsert" }))
                    {
                        <div class="form-group">
                            <label>Policy Group Name<span class='required'>*</span></label>
                            @Html.DropDownListFor(m => m.LookPolicyGroupId, ViewBag.PolicyGroup as SelectList, new { @class = "form-control", placeholder = "Policy Group Name" })
                        </div>
                        <div class="form-group">
                            <label>Policy Name<span class='required'>*</span></label>
                            @Html.TextBoxFor(m => m.PolicyName, new { @class = "form-control", placeholder = "Policy Name" })
                            @Html.HiddenFor(m => m.LookPolicyId)
                        </div>
                        <div class="form-group">
                            <label>Policy Unit</label>
                            @Html.TextBoxFor(m => m.PolicyUnit, new { @class = "form-control", placeholder = "Policy Unit, like Days" })
                            
                        </div>
                        <div class="col-sm-12 text-center">
                            <input type="submit" class="btn btn-sm btn-primary" value="Save" />
                        </div>
                    }

                </div>
            </div>
            <!-- END panel-->
        </div>

    </div>
</div>
